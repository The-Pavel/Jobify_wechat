.quiz-card {
  height: 700rpx;
  padding: 20rpx;
  margin-left: 80rpx;
  margin-right: 80rpx;
  margin-bottom: 80rpx;
  /* border: 2rpx solid #BDBDBD; */
  border-radius: 10rpx;
  text-align: center;
  background: linear-gradient(#F2FCFC, #BDF1F6);
}
.quiz-outer1{
  height: 30rpx;
  margin-top: 120rpx;
  margin-left: 120rpx;
  margin-right: 120rpx;
  /* border-top: 2rpx solid #BDBDBD;
  border-right: 2rpx solid #BDBDBD;
  border-left: 2rpx solid #BDBDBD; */
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  background-color:#3771C1;
}
.quiz-outer2 {
  height: 30rpx;
  margin-left: 100rpx;
  margin-right: 100rpx;
  /* border-top: 2rpx solid #BDBDBD;
  border-right: 2rpx solid #BDBDBD;
  border-left: 2rpx solid #BDBDBD; */
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  background-color: #8FBAF3;
}
.question{
  height: 250rpx;
  padding: 20rpx;
  margin: 50rpx 30rpx;
  font-family: roboto;
  font-size: 48rpx;
  line-height: 70rpx;
  margin-bottom: 0rpx;
}
#quiz-answer-1 {
  height: 120rpx;
  width: 120rpx;
  margin-right: 50rpx;
  margin-top: 10rpx;
  padding: none;
  animation: pulse-no 2s infinite;
}
#quiz-answer-2 {
  height: 120rpx;
  width: 120rpx;
  margin-left: 50rpx;
  margin-top: 10rpx;
  animation: pulse-yes 2s infinite;
}
.answers {
  display: flex;
  flex-direction: column;
  
}
#face {
  height: 110rpx;
  width: 100rpx;
  margin: auto 230rpx;
  
}
.submit-btn {
  position: fixed;
  bottom: -25rpx;
  display:flex;
  margin: 50rpx 0rpx;
  margin-left: 222rpx;
  flex-direction: column;
  background-color: white;
  padding: 20rpx 100rpx;
  border: 5rpx solid #0245A3;
  border-radius: 20rpx;
  animation: wiggle 5s infinite;
}
#submit-img {
  width: 80rpx;
  height: 80rpx;
  
}
#submit-text {
  width: 100rpx;
  color:#0245A3;
  font-weight: lighter;
}

#bubble {
  margin: 10rpx;
  display: flex;
  flex-direction: row;
}



@keyframes pulse-no {
  20% {
    /* box-shadow:  inset -5px 0 5px 0 rgba(0,0,0,.4); */
    transform: scale(1);
  }

  25% {
    /* box-shadow:  inset -5px 0 5px 0 rgba(0,0,0,.4); */
    transform: scale(1.08);
  }
  
  30% {
    /* box-shadow:  inset -11px 0 5px 0 rgba(0,0,0,.4); */
    transform: scale(1.03);
  }
  
  35% {
    /* box-shadow:  inset -5px 0 5px 0 rgba(0,0,0,.4); */
    transform: scale(1.05);
  }
  
  40% {
    /* box-shadow:  inset -8px 0 5px 0 rgba(0,0,0,.4); */
    transform: scale(1);
  }
}

@keyframes pulse-yes {
  5% {
    /* box-shadow:  inset -5px 0 5px 0 rgba(0,0,0,.4); */
    transform: scale(1.08);
  }
  
  10% {
    /* box-shadow:  inset -11px 0 5px 0 rgba(0,0,0,.4); */
    transform: scale(1.03);
  }
  
  15% {
    /* box-shadow:  inset -5px 0 5px 0 rgba(0,0,0,.4); */
    transform: scale(1.05);
  }
  
  20% {
    /* box-shadow:  inset -8px 0 5px 0 rgba(0,0,0,.4); */
    transform: scale(1);
  }
  
  100% {
    /* box-shadow:  inset -7px 0 5px 0 rgba(0,0,0,.4); */
    transform: scale(0deg);
  }
}

@keyframes wiggle {
  3% {
    box-shadow:  inset -5px 0 5px 0 rgba(0,0,0,.4);
    transform: rotate(5deg);
  }
  
  7% {
    box-shadow:  inset -11px 0 5px 0 rgba(0,0,0,.4);
    transform: rotate(-4deg);
  }
  
  10% {
    box-shadow:  inset -5px 0 5px 0 rgba(0,0,0,.4);
    transform: rotate(2deg);
  }
  
  13% {
    box-shadow:  inset -8px 0 5px 0 rgba(0,0,0,.4);
    transform: rotate(0deg);
  }
  
  100% {
    box-shadow:  inset -7px 0 5px 0 rgba(0,0,0,.4);
    transform: rotate(0deg);
  }
}
