<view class="index">
  <view class="hd">
  <image class="logo" src="/image/jobify.png">change it to job logo</image>
  </view>
</view>

<view class="sep"></view>

<view class="container form">
<form bindsubmit="bindFormSubmit">

  <view class="page-body">

    <view class="page-section">
      <view class="page-section-title">1. Your company's contact details</view>
      <view class="textarea-wrp">
        <textarea auto-focus="true" placeholder="Company Name" name="company" auto-height />
      </view>
      <view class="textarea-wrp">
        <textarea placeholder="location" name="location" auto-height />
      </view>  
      <view class="textarea-wrp">
        <textarea placeholder="email@email.com" name="email" auto-height />
      </view>
      <view class="textarea-wrp">
        <textarea placeholder="+86 185******" name="phone" auto-height />
      </view>
      <view class="textarea-wrp">
        <textarea placeholder="wechat" name="wechat" auto-height />
      </view>  
              
    </view>

    <view class="page-section">
      <view class="page-section-title">2. Your offer</view>
        <view class="textarea-wrp">
        <textarea placeholder="Job title" name="title" auto-height />
        </view> 
      <text class="page-section-details">Describe the job, pitch or product; technologies involved...</text>
      <view class="textarea-wrp">
      <textarea style="height: 12em" placeholder="Job Description" name="description" maxlength="-1" />
      </view>
      <view class="textarea-wrp">
        <textarea placeholder="Salary" name="salary" auto-height />
      </view>  
      <button>
        <textarea placeholder="upload pdf" name="upload" auto-height />
      </button>  
    </view> 
           
    <view class="page-section">
      <view class="page-section-title">3. What are you looking for?</view>
     
       <!-- <button wx:for= "{{array}}" wx:for-item= "arrayitem" bindtap= "click" size = "mini" id = "buttonstyle">
      {{arrayitem}}
      </button>  -->
      <!-- <view class="checkbox">
          <checkbox value="full-time" checked="true"/>Full time position
        </view> -->

     <checkbox-group class="group" bindchange="checkboxChange" >
      <view id = "container1">
        <view class="label-1" wx:for="{{checkboxItems}}">
          <label>
            <checkbox hidden value="{{item.name}}" checked="{{item.checked}}"></checkbox>
            <view class="label-1__icon">
            <view class="label-1__icon-checked" style="opacity:{{item.checked ? 1: 0}}"></view>
              <text class="label-1__text">{{item.value}}</text>
            </view>
          </label>
        </view>  
      </view>
    </checkbox-group>
   
      </view>
   
    
    <view class="btn-area">
      <button type="primary" form-type="submit" loading="{{loading}}" bindtap="bindSubmit">Send</button>
    </view>
  </view>

</form>
</view>
