/* pages/singlejob/singlejob.wxss */

.job_card {
  margin: 50rpx 50rpx 50rpx 50rpx;
  border: 2rpx solid #BDBDBD;
  border-radius: 10rpx;
  box-shadow: 3px 3px 1px 1px #BDBDBD;
}
.company_info {
  text-align: center;
  padding: 50rpx 50rpx 0rpx 50rpx;
}
.job_logo {
  width: 100rpx;
  height: 100rpx;
  padding: 0rpx 0rpx 30rpx 0rpx;
}
.job_info {
  margin: 50rpx 50rpx 50rpx 50rpx;
  padding: 30rpx 0rpx 0rpx 0rpx;
  align-items: center;
  border-top: 0.5px solid #BDBDBD;
}
.job_type {
  width: 250rpx;
  height: 70rpx;
  font-size: 30rpx;
  background-color: #F2F2F2;
}
.job_post_time {
  margin: 50rpx 50rpx 50rpx 50rpx;
  padding: 30rpx 0rpx 0rpx 0rpx;
  border-top: 0.5px solid #BDBDBD;
}
.save {
  height: 80rpx;
  width: 60rpx;
  margin: 0rpx 300rpx 30rpx 300rpx;
}
.notice{
  margin-top: 20rpx;
  color: #888888;
  font-size: 25rpx;
  font-family: Roboto; 
  font-weight: lighter;
}
.label-1__icon {
    position: relative;
    margin: 0rpx 10rpx;
     /* display: inline-block;  */
    vertical-align: middle;
    width: auto;
    height: auto;
    background: white;
    border: 1px solid #8FBAF3;
    border-radius: 12px;
}


#container1{  
  display: inline-flex;  
  flex-wrap: wrap; 
  height: auto;
  justify-content: center;
  margin: 20rpx 20rpx;
}  

.label-1__text{
    text-align: center;
    line-height: 15rpx;
    font-size: 20rpx;
    font-family: Roboto;
    font-weight: lighter;
    fill-opacity: 40rpx;
     padding: 5rpx; 
    /* vertical-align: middle; */
}

.group {
  display: inline-flex;
  margin-top: 10rpx;
}

.label-1{
    margin: 5rpx 5rpx;
    width: auto;
}
#job-desc {
  text-align:justify;
  text-justify:inter-word;
}
.location {
  margin-top: 30rpx;
}