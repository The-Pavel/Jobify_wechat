/* pages/singlejob/singlejob.wxss */

.job_card {
  margin: 50rpx 50rpx 50rpx 50rpx;
  border: 2rpx solid #BDBDBD;
  border-radius: 10rpx;
  box-shadow: 3px 3px 1px 1px #BDBDBD;
}

#edit_btn {
  width: 150rpx;
  background:#8FBAF3;
  color: white;
  margin: 20rpx 250rpx;
}

.fav_count {
  text-align: center;
  /* line-height: 15rpx; */
  font-size: 30rpx;
  font-family: Roboto;
  font-weight: bold;
  color: #024583;
  padding: 0rpx 10rpx 0rpx 10rpx;
}

.h3 {
  color: #024583;
}

.company_info {
  text-align: center;
  padding: 50rpx 50rpx 0rpx 50rpx;
}
.job_logo {
  width: 100rpx;
  height: 100rpx;
  padding: 0rpx 0rpx 30rpx 0rpx;
}
.job_info {
  margin: 50rpx 50rpx 50rpx 50rpx;
  padding: 30rpx 0rpx 0rpx 0rpx;
  align-items: center;
  border-top: 0.5px solid #BDBDBD;
}
.job_type {
  width: 250rpx;
  height: 40rpx;
  font-size: 30rpx;
  /* background-color: #F2F2F2; */
  transform: translateX(190rpx);
  margin-top: 10rpx;
}
.job_post_time {
  margin: 50rpx 50rpx 50rpx 50rpx;
  padding: 30rpx 0rpx 0rpx 0rpx;
  border-top: 0.5px solid #BDBDBD;
}
.save {
  height: 80rpx;
  width: 60rpx;
  margin: 0rpx 300rpx 30rpx 300rpx;
}
.notice{
  margin-top: 20rpx;
  color: #888888;
  font-size: 25rpx;
  font-family: Roboto; 
  font-weight: lighter;
}
.label-1__icon {
    position: relative;
    margin: 0rpx 10rpx;
     /* display: inline-block;  */
    vertical-align: middle;
    width: auto;
    height: auto;
    background: white;
    border: 1px solid #8FBAF3;
    border-radius: 18px;
}

#container1{  
  display: inline-flex;  
  flex-wrap: wrap; 
  height: auto;
  width: 600rpx;
  justify-content: center;
  margin: 20rpx 20rpx;
  transform: translateX(-50rpx);
}  

.label-1__text{
    text-align: center;
    font-size: 28rpx;
    font-family: Roboto;
    font-weight: bolder; 
    padding: 10rpx; 
    width: auto;
    height: auto;
    color: #8FBAF3;
}

.group {
  display: inline-flex;
  margin-top: 10rpx;
}

.label-1{
    margin: 5rpx 5rpx;
    width: auto;
}
#job-desc {
  text-align:justify;
  text-justify:inter-word;
}
.location {
  margin-top: 30rpx;
}